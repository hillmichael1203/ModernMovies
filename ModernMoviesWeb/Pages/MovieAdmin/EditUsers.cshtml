@page
@model ModernMoviesWeb.Pages.MovieAdmin.EditUsersModel
@{
}
<h1>
	EDIT USERS
</h1>
<h2>
</h2>
<form method="post" class="form-group">
	@foreach (var user in Model.Users)
	{
		<div class="row m-2 border">
			
			<div class="row m-2">
				<div class="col-2">
					<label class="form-label" asp-for="@user.Name"></label>
				</div>
				<div class="col-10">
					<label class="form-label">@user.Name</label>
				</div>
			</div>
			<div class="row m-2">
				<div class="col-3">
					<a asp-page="EditMovie" asp-route-id="@user.PersonId" class="btn btn-primary"> <i class="bi bi-pencil-square"></i> Edit User</a>
				</div>
				<div class="col-3">
					<a asp-page="DeleteUser" asp-route-id="@user.PersonId" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete this user permanently?');"><i class="bi bi-trash"></i> Delete User</a>
				</div>
			</div>
		</div>
	}
</form>