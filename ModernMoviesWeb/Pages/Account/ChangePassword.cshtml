@page
@model ModernMoviesWeb.Pages.Account.ChangePasswordModel
@{
}
<h1>CHANGE PASSWORD</h1>
<form method="post" class="form-group">
	<div class="row m-2 text-danger" asp-validation-summary="All"></div>
<div class="row m-2 justify-content-center">
	<div class="col-4">
		<input asp-for="@Model.changePassword.OldPassword" type="password" class="form-control" placeholder="Confirm Old Password" />
		<span asp-validation-for="changePassword.OldPassword" class="text-danger"></span>
	</div>
</div>
<div class="row m-2 justify-content-center">
	<div class="col-4">
		<input asp-for="@Model.changePassword.NewPassword" type="password" class="form-control" placeholder="New Password" />
		<span asp-validation-for="changePassword.NewPassword" class="text-danger"></span>
	</div>
</div>
<div class="container">
	<div class="row justify-content-center">
		<div class="col-2">
			<input type="submit" value="SAVE CHANGES" class="btn btn-primary" />
		</div>
	</div>
</div>
</form>