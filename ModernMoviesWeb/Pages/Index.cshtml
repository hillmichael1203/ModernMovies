@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">MODERN MOVIES</h1>
    <p>Please give us your money.</p>
</div>

<!-- Carousel -->
<div id="carouselExampleCaptions" class="carousel slide">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="https://via.placeholder.com/800x400?text=Movie+Placeholder" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Movie Title</h5>
                <p>Some description about the movie</p>
            </div>
        </div>

        <!-- Second Slide -->
        <div class="carousel-item">
            <img class="d-block w-100" src="https://via.placeholder.com/800x400?text=Second+Movie+Placeholder" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Second Movie Title</h5>
                <p>Some description about the second movie</p>
            </div>
        </div>

        <!-- Third Slide -->
        <div class="carousel-item">
            <img class="d-block w-100" src="https://via.placeholder.com/800x400?text=Third+Movie+Placeholder" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>Third Movie Title</h5>
                <p>Some description about the third movie</p>
            </div>
        </div>

        <!-- Repeat for each movie you want to feature -->
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>

</div>
